@model Employee.Models.EmployeeEntity

<h1>Do you want to delete this employee?</h1>

<form asp-controller="Home" asp-action="Delete" method="post">

    <input type="hidden" name="Id" value="@Model.Id" />

    <table border="1" cellpadding="10">
        <tr>
            <td>Employee ID :</td>
            <td><input asp-for="EmployeeID" readonly="readonly" /></td>
        </tr>
        <tr>
            <td>First Name :</td>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <td>Last Name :</td>
            <td>@Model.LastName</td>
        </tr>
        <tr>
            <td colspan="2">
                <button type="submit">Delete</button>
            </td>
        </tr>
    </table>
</form>
