@model Employee.Models.EmployeeEntity

<h1>Insert Employee</h1>

<form asp-controller="Home" asp-action="Insert" method="post" enctype="multipart/form-data">

<table border="1" cellpadding="10">
    <tr>
        <td>Employee ID :</td>
        <td><input asp-for="EmployeeID" /></td>
    </tr>
    <tr>
        <td>First Name :</td>
        <td><input asp-for="FirstName" /></td>
    </tr>
    <tr>
        <td>Last Name :</td>
        <td><input asp-for="LastName" /></td>
    </tr>
    <tr>
        <td>Photo :</td>
        <td><input type="file" name="postedFile" /></td>
    </tr>
    <tr>
        <td colspan="2">
            <button type="submit">Save</button>
        </td>
    </tr>
</table>
</form>

<br/ >
<h1>@ViewBag.Message</h1>
